  try {
    const body = await request.json()
    
    // Log API request
    logInfo('Contact form submission started', {
      component: 'ContactAPI',
      action: 'POST',
      hasEmail: !!body.email,
      hasMessage: !!body.message,
    })
    
    // Process request
