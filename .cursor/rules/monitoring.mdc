      component: 'ContactAPI',
      action: 'POST',
      duration: Date.now() - startTime,
      success: true,
    })
    
    return NextResponse.json(result, { status: 200 })
  } catch (error) {
    logError(error as Error, {
      component: 'ContactAPI',
      action: 'POST',
      duration: Date.now() - startTime,
      url: request.url,
    })
    
    return NextResponse.json(
      { error: 'Internal server error' },
      { status: 500 }
    )
  }
